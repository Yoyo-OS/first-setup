                    "type" :  "command",
                    "commands" : ["!nextBoot flatpak install -y com.github.tchx84.Flatseal"]
                },
                {
                    "if" : "Metadata Cleaner",
                    "type" :  "command",
                    "commands" : ["!nextBoot flatpak install -y fr.romainvigier.MetadataCleaner"]
