                        {
                            "name" : "Disk Usage Analyzer",
                            "icon" :  "org.gnome.baobab",
                            "flatpak" : true
                        },
                        {
                            "name" : "Document Viewer",
                            "icon" :  "org.gnome.Evince",
                            "flatpak" : true,
                            "snap" : true
