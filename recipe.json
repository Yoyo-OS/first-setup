                        },
                        {
                            "name" : "Image Viewer",
                            "icon" :  "org.gnome.eog",
                            "flatpak" : true,
                            "snap" : true
                        },
                        {
                            "name" : "Logs",
                            "icon" :  "org.gnome.Logs",
                            "flatpak" : true,
                            "snap" : true
                        },
                        {
                            "name" : "Maps",
                            "icon" :  "org.gnome.Maps",
                            "flatpak" : true
